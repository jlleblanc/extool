				$row = &$this->{{tablename}}[$i];

				$link = 'index.php?option=' . $option . '&amp;view={{editviewname}}&amp;cid[]='. $row->{{primary_key}};
				$checkbox = JHTML::_('grid.id', $i, $row->{{primary_key}} );
